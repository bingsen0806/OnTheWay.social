  "scripts": {
    "start": "FIREBASE_ENV=dev && react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --transformIgnorePatterns 'node_modules/(?!(@ionic/react|@ionic/react-router|@ionic/core|@stencil/core|ionicons)/)'",
    "eject": "react-scripts eject",
    "prepare": "husky install",
    "deploy": "FIREBASE_ENV=dev && ionic build --prod && firebase deploy",
    "deploy-prod": "FIREBASE_ENV=prod && ionic build --prod && firebase deploy"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "description": "BuddyNUS application",
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ],
    "*.tsx": [
      "eslint --fix"
    ],
    "**/*": [
      "prettier --write --ignore-unknown"
    ],
    "*.css": [
      "stylelint --fix --allow-empty-input"
    ]
  }
